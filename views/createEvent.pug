doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Create Event
    link(rel='stylesheet', href='/css/style.css')
  body
    nav
      .navbar
        a(href='#') Volunteer Management System
    .center
      .signup
        h3 Enter Event Details
        form(action='')
          input#name(type='text', placeholder='Name*', required='')
          br
          input#place(type='text', placeholder='Place*', required='')
          br
          input#date(type='date', placeholder='Date*', required='')
          br
          input#description(type='text', placeholder='Description*', required='')
          br
          input#startTime(type='time', placeholder='Start-time *', required='')
          br
          input#endTime(type='time', placeholder='End-time*', required='')
          br
          input#create_event_btn(type='button', value='Create Event')
          
  script(src="/js/createEvent.js") 