doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    |  
    title User Details
    link(rel='stylesheet', href='/css/style.css')
    
  body
    .detail_user
      // image side start
      .image_side
        div
          img(src='img/ptofile4.jpg', alt='')
          button(type='submit') DELETE
      // image side end
      .contend
        h2 Volunteer details
        hr
        p
          b Name : 
          |  #{volunteer.name}
        hr
        p
          b Email id: 
          | #{volunteer.email}
        hr
        p
          b Phone no : 
          | #{volunteer.number}
        hr
        p
          b Gender : 
          | #{volunteer.gender}
        hr
        p
          b DOB : 
          | #{volunteer.dob}
        hr
        p
          b Address :
          | #{volunteer.address}
        hr