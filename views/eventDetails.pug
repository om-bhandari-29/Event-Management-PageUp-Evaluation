doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    |  
    title #{title}
    link(rel='stylesheet', href='/css/style.css')
    link(rel="shortcut icon", href='/img/eventManagementFav.png', type="image/x-icon")
    
  body
    nav 
      .navbar
        if organization 
          h1= `Welcome ${organization.name}`
        else 
          h1 Welcome 
        
    .detail_user
      // image side start
      .image_side
        div
          img(src='/img/eventDetails.jpg', alt='')
          if organization 
            button#event_del_btn(data-eventid=`${event._id}`) DELETE
      // image side end
      .contend
        h2 Event details
        hr
        p
          b Name : 
          |  #{event.name}
        hr
        p
          b Place: 
          |  #{event.place}
        hr
        p
          b Date :
          |  #{event.date}
        hr
        p
          b Start Time :
          |  #{event.startTime}
        hr
        p
          b End Time :
          |  #{event.endTime}
        hr
        p
          b description :
          |  #{event.description}
        hr

    .s_user_div 
      each volunteer, i in volunteers 
        //- console.log(i)
        .s_s_vol_div
          p= `${volunteer.name}`
          p= `${volunteer.skills}`
          button(id=`${'sel_vol_btn'+i}` onclick=`func('sel_vol_btn${i}', '${volunteer._id}', '${event._id}')`) Select Volunteer
          //- button.sel_vol_btn(data-eventid=`${volunteer._id}`) Select Volunteer



  script(src="/js/delEvent.js") 
  script(src="/js/selectVolunteer.js") 